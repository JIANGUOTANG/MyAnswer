<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app ="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginBottom="56dp"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvChoiceQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:gravity="center_vertical"
                        android:text="在Photoshop中批处理(Batch)命令是Ctrl?"
                        android:textSize="16sp" />
                </LinearLayout>
                <com.example.jian.myanswer.view.sparkbutton.SparkButton
                    android:id="@+id/sparkBtkCollect"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    app:sparkbutton_activeImage="@drawable/ic_star_on"
                    app:sparkbutton_animationSpeed=".85"
                    app:sparkbutton_iconSize="30dp"
                    app:sparkbutton_inActiveImage="@drawable/ic_star_off"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <View style="@style/lineStyle" />
        <LinearLayout
            android:id="@+id/errorChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.jian.myanswer.view.MyCircleRadioButton
                android:id="@+id/mCircleCheckBoxError"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:text="×"
                app:textSize="26sp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:strokeWidth="2dp"
                app:colorUnchecked="@color/colorPrimary"
                app:colorChecked="@color/colorAccent"
                />

                />
        </LinearLayout>
        <View style="@style/lineStyle" />
        <LinearLayout
            android:id="@+id/RightChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.jian.myanswer.view.MyCircleRadioButton
                android:id="@+id/mCircleCheckBoxRight"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:text="√"
                app:textSize="26sp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:strokeWidth="2dp"
                app:colorUnchecked="@color/colorPrimary"
                app:colorChecked="@color/colorAccent"
                />
        </LinearLayout>
        <View style="@style/lineStyle" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>